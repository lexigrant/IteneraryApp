<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/d35e441530.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
</head>

<body class="new">

    <div class="topContainer">
        <div class="navContainer">
            <nav>
                <a href="/itenerary/"><button class=" backButton"><i class="fa-solid fa-angle-left"></i> Back</button></a>
            </nav>
        </div>
    <div class="addNew">
        <h1>Itenerary Details</h1>
    </div>


    </div>

    <div class="everything">
        <div class="buttonContainer">
        <a href="/itenerary/<%=Itenerary._id%>/trip/new"><button class="addTrip btn-secondary">Add Trip</button></a>
        </div>
    <br />
        <div>
            <% for(let i=0; i < Itenerary.trips.length; i++) { %>

                <h2 class="tripName">
                    <%=Itenerary.trips[i].name%>
                </h2>
                
                <div class="trip">
                    <a href="/itenerary/<%=Itenerary._id%>/trip/<%=Itenerary.trips[i]._id%>/edit"><button
                            class="editTrip"><i class="fa-solid fa-pencil"></i></button></a>
                    <form action="/itenerary/<%=Itenerary._id%>/trip/<%=Itenerary.trips[i]._id%>?_method=DELETE"
                        method="POST">
                        <!-- <input class="deleteTrip" type="submit" value="DELETE"> -->
                        <button class="deleteTrip">
                            <i class="fa-solid fa-trash-can"></i>
                        </button>
                        
                        
                        
                    </form>
                </div>
                <div class="buttonContainer">
                    <div class="emptySpace"></div>
                    <ul class="ulStyling">
                        <li>
                            <%=Itenerary.trips[i].transportationTo%>
                        </li>
                        <li>
                            <%=Itenerary.trips[i].transportation%>
                        </li>
                        <li>
                            <%=Itenerary.trips[i].lodging%>
                        </li>
                    </ul>
                    <nav>
                       
                </div>
                <h3 class="tripName">Activities</h3>
                <div class="buttonContainer">
                <a href="/itenerary/<%=Itenerary._id%>/trip/<%=Itenerary.trips[i]._id%>/activity/new"><button
                    class="addTrip btn-secondary">Add Activity</button></a>
                </div>
                <% for(let j=0; j < Itenerary.trips[i].activities.length; j++) { %>
                    <div class="activity">
                        <a
                            href="/itenerary/<%=Itenerary._id%>/trip/<%=Itenerary.trips[i]._id%>/activity/<%=Itenerary.trips[i].activities[j]._id%>/edit"><button
                                class="editTrip "><i class="fa-solid fa-pencil"></i></button></a>
                        <form
                            action="/itenerary/<%=Itenerary._id%>/trip/<%=Itenerary.trips[i]._id%>/activity/<%=Itenerary.trips[i].activities[j]._id%>?_method=DELETE"
                            method="POST">
                            <!-- <input class="deleteTrip" type="submit" value="DELETE"> -->
                            <button class="deleteTrip">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </form>
                    </div>
                    <div class="buttonContainer">
                        <div class="emptySpace"></div>
                        <ul class="ulStyling">
                            <li>
                                <%=Itenerary.trips[i].activities[j].name%>
                            </li>
                            <li class="noBullet">
                                <%=Itenerary.trips[i].activities[j].description%>
                            </li>
                            <li class="noBullet">
                                <%=Itenerary.trips[i].activities[j].address%>
                            </li>
                            <li class="noBullet">
                                <%=Itenerary.trips[i].activities[j].cost%>
                            </li>
                        </ul>
                        
                    </div>
                    <% } %>
                        <% } %>
        </div>
    </div>
</body>

</html>